<div class="right_col" role="main">
  <div class="">
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <div class="form-horizontal form-label-left">
              <h2>Log in</h2>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal form-label-left') do |f| %>
                <div class="form-group">
                  <%= f.label :email, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :password, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>
                <div class="actions control-label col-md-6 col-sm-6 col-xs-12">
                  <%= f.submit "Log in", class: 'btn btn-primary' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

