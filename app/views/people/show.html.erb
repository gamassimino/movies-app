<div class="right_col" role="main">
  <div class="">
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <br>
            <div class="form-horizontal form-label-left">
              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">First name</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input class="form-control col-md-7 col-xs-12" type="text" name="first_name" value="<%= @person['first_name'] %>" readonly>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Last name</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input class="form-control col-md-7 col-xs-12" type="text" name="last_name" value="<%= @person['last_name'] %>" readonly>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Aliases</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input class="form-control col-md-7 col-xs-12" type="text" name="aliases" value="<%= @person['aliases'] %>" readonly>
                </div>
              </div>
            </div>
            <div class="ln_solid"></div>
            <div class="x_content">
              <section class="content invoice">
                <div class="row">
                  <div class="col-xs-12 table">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Movies as actor</th>
                          <th>Movies as director</th>
                          <th>Movies as producer</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td><%= @person['movies_as_actor'] %></td>
                          <td><%= @person['movies_as_director'] %></td>
                          <td><%= @person['movies_as_producer'] %></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </section>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

